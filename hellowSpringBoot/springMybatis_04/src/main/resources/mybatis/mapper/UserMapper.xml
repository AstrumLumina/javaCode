<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuanxie.mapper.UserMapper">

    <select id="getAllUsers" resultType="users">
        select * from mybatisstudy.users;
    </select>

    <select id="getUserById" resultType="users" parameterType="_int">
        select * from mybatisstudy.users where id = #{id};
    </select>

    <insert id="addUser" parameterType="users">
        insert into mybatisstudy.users(id, name, pwd)
        value (#{id},#{name}, #{pwd});
    </insert>

    <update id="updateUser" parameterType="users">
        update mybatisstudy.users
        set name=#{name},pwd=#{pwd}
        where id=#{id};
    </update>

    <delete id="deleteUserById" parameterType="_int">
        delete from mybatisstudy.users
        where id=#{id};
    </delete>

</mapper>



