<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0"
         metadata-complete="true">

  <display-name>cookiestest</display-name>
  <description>
    cookiestest
  </description>


  <servlet>
    <servlet-name>cookies</servlet-name>
    <servlet-class>com.xuanxie.servlet.CookiesTest</servlet-class>
  </servlet><servlet-mapping>
  <servlet-name>cookies</servlet-name>
  <url-pattern>/cookies</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>cookieAge</servlet-name>
    <servlet-class>com.xuanxie.servlet.CookiesDemon2</servlet-class>
  </servlet><servlet-mapping>
  <servlet-name>cookieAge</servlet-name>
  <url-pattern>/ck2</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>cookieEncoding</servlet-name>
    <servlet-class>com.xuanxie.servlet.EncodingTest</servlet-class>
  </servlet><servlet-mapping>
  <servlet-name>cookieEncoding</servlet-name>
  <url-pattern>/ckencoding</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>Session01</servlet-name>
    <servlet-class>com.xuanxie.servlet.SessionTest</servlet-class>
  </servlet><servlet-mapping>
  <servlet-name>Session01</servlet-name>
  <url-pattern>/session</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>Session02</servlet-name>
    <servlet-class>com.xuanxie.servlet.SessionDemon02</servlet-class>
  </servlet><servlet-mapping>
  <servlet-name>Session02</servlet-name>
  <url-pattern>/getsession</url-pattern>
</servlet-mapping>

  <servlet>
    <servlet-name>InvalidSession</servlet-name>
    <servlet-class>com.xuanxie.servlet.InvalidSession</servlet-class>
  </servlet><servlet-mapping>
  <servlet-name>InvalidSession</servlet-name>
  <url-pattern>/invalid</url-pattern>
</servlet-mapping>

  <!--设置session的失效时间-->
  <session-config>
    <session-timeout>15</session-timeout>
<!-- 以分钟为单位,15分钟后失效  ,若不设置,则直到关闭浏览器才失效-->
    <!--session由服务器创建,保存到服务器中,一个浏览器对应一个浏览器-->
  </session-config>

</web-app>