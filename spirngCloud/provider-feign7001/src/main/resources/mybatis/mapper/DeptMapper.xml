<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuanxie.springcloud.mapper.DeptMapper">
    <insert id="addDept" parameterType="dept">
        insert into dept(deptid, deptname,db_source)
        VALUE(#{deptid}, #{deptname},DATABASE())
    </insert>
    <delete id="delDeptById" parameterType="long">
        delete from dept where deptid=#{deptid};
    </delete>
    <select id="deptById" resultType="dept" parameterType="int">
        select deptid,deptname,db_source
        from dept
        where deptid=#{deptid};
    </select>
    <select id="getAllDept" resultType="dept">
        select * from dept
    </select>
    <update id="updateDept" parameterType="dept">
        update dept
        set deptname=#{deptname}
        where deptid=#{deptid}
    </update>

</mapper>