<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xuanxie.mapper.UserMapper">

    <select id="getUserById" parameterType="_int" resultType="users">
        select * from mybatisstudy.users where id=#{id};
    </select>

    <select id="getPwdByName" parameterType="string" resultType="string">
        select pwd from mybatisstudy.users where name=#{name};
    </select>

    <select id="getUsersByName" parameterType="string" resultType="users">
        select * from mybatisstudy.users  where name=#{name};
    </select>
</mapper>