<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.xuanxie.dao.StudentMapper">

<!--    //多对一查询 方式一:-->
    <select id="getAllStudent" resultMap="StudentTeacher" >
        select * from students;
    </select>
    <resultMap id="StudentTeacher" type="com.xuanxie.pojo.Student">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <association property="myTeacher" column="tid" javaType="teacher" select="getMyTeacher"/>
    </resultMap>
    <select id="getMyTeacher" resultType="teacher">
        select * from teachers where id=#{tid}
    </select>


<!--    //多对一查询 方式二 :-->
    <select id="getAllStudent_2" resultMap="StudentTeacher_2">
        select  s.id id,s.name name,t.id tid,t.name tname
        from students s,teachers t
        where s.tid=t.id;
    </select>
    <resultMap id="StudentTeacher_2" type="student">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <association property="myTeacher" javaType="teacher">
            <result property="name" column="tname"/>
            <result property="id" column="tid"/>
        </association>
    </resultMap>

</mapper>
