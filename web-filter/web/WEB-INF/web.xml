<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <servlet>
        <servlet-name>showservlet</servlet-name>
        <servlet-class>com.xuanxie.servlet.ShowServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>showservlet</servlet-name>
        <url-pattern>/showencode</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>showservlet</servlet-name>
        <url-pattern>/servlet/showencode</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>CharEncode</filter-name>
        <filter-class>com.xuanxie.filter.CharEncodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>CharEncode</filter-name>
        <url-pattern>/servlet/*</url-pattern><!--表示/servlet 下的任何请求都会被过滤-->
        <!--
        <url-pattern>/*</url-pattern> 表示任何请求都会被过滤
        -->
    </filter-mapping>

    <!--配置监听器-->
    <listener>
        <listener-class>com.xuanxie.listener.OnlineCountlistner</listener-class>
    </listener>

    <!--设置自动销毁session-->
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>com.xuanxie.servlet.Login</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/servlet/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>loginout</servlet-name>
        <servlet-class>com.xuanxie.servlet.LoginOut</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>loginout</servlet-name>
        <url-pattern>/servlet/loginout</url-pattern>
    </servlet-mapping>
    
    <filter>
        <filter-name>loginfilter</filter-name>
       <filter-class>com.xuanxie.filter.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginfilter</filter-name>
        <url-pattern>/sys/*</url-pattern>
    </filter-mapping>
</web-app>
